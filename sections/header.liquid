<header class="header">
  <div class="header__logo-branch">
    <img 
      src="{{ 'logo.png' | asset_url }}" 
      width="200" 
      alt="Brand logo"
    >

    
  </div>

  <div class="header__payments">
    {%- comment -%} Aquí podrías incluir íconos de medios de pago {%- endcomment -%}
    {% render 'payment-icons' %}
  </div>

  <div class="header__products">
    {%- comment -%} Ejemplo: menú dinámico de colecciones {%- endcomment -%}
    <nav class="header__nav">
      <ul class="lista-header">
        {% comment %} {% for collection in collections %}
          <li><a href="/collections/{{ collection.handle }}">{{ collection.title }}</a></li>
        {% endfor %} {% endcomment %}
        <li>All Products</li>
        <li>Collections</li>
        <li class="carrito">
            <span class="material-icons cart-icon">shopping_cart</span>
        </li>

      </ul>
    </nav>
  </div>
</header>



